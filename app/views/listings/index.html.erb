<section id="filter-bar">
<div class = "control group">
  <div class="controls span2">
    <ul class = "list-inline">
        <% @locations.each do |location| %>
          <li> <label class="checkbox"> <input type="checkbox" value="<%= location.id %>" id="inlineCheckbox1"> <%= location.name %> </label></li>
        <% end %>
    </ul>
  </div>
</div>
</section>

<section class="center sieve">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url),listing %>
          <div class="caption">
            <h3><%= link_to listing.name , listing %></h3>
            <p> <%= link_to number_to_currency(listing.price), listing %></p>
            <p> <%= "Sold by #{listing.user.name}" %></p>
            <% if (user_signed_in?) && (current_user == listing.user) %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>  
</section>



<% if (user_signed_in?) %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data:{no_turbolink: true} %>
<% end %>
