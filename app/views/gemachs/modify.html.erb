<div class="navbar" role="navigation">
  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <div class = "center">
      <h2>My Gemachs</h2>
    </div>
  </div>
</div>

<div class="gemach-place">
  <%= link_to "Place Gemach", new_gemach_path, class: "btn btn-primary" %>
</div>

<div class="row">
<% @gemachs.each do |gemach| %>
  <div class="col-lg-3">
    <div class="gemach-modify"><%= link_to "Modify", [:edit, gemach] %></div>
    <div class="gemach-item">
      <div class="gemach-head">
        <%= gemach.title %>
      </div>
      <div class="gemach-content">
        <p class="gemach-title"><%= gemach.location %></p>
        <p class="gemach-body"><%= gemach.body %></p>
        <p class="gemach-last-line"><b><%= gemach.last_line %></b></p>
      </div>
    </div>
  </div>
<% end %>
</div>
