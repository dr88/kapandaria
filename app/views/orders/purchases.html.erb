<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="orderModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <div class="modal-wrapper"></div>
      </div>
    </div>
  </div>
</div>

<div class = "center">
  <h2>My Purchases</h2>
</div>

<% if (user_signed_in?) %>
  <%= link_to 'Add New Listing', new_listing_path, class: "btn btn-primary pull-right", data:{no_turbolink: true} %>
  <br><br>
<% end %>

<table class = "table table-striped table-hover">
  <tr>
    <th class="left">Image</th>
    <th class="left">Item</th>
    <th class="left">Price</th>
    <th class="left">Qty</th>
    <th class="left">Seller</th>
    <th class="left">Date Bought</th>
  </tr>

<% @orders.each do |order| %>
  <%= content_tag(:tr, {class: "order", id: order.id.to_s}, true) do%>
    <td><%= image_tag order.listing.image.url(:thumb) %></td>  
    <td><%= order.listing.name %></td>
    <td><%= number_to_currency(order.listing.price) %></td>
    <td><%= order.qty %></td>
    <td><%= order.seller.name %></td>
    <td><%= relative_time(order.created_at) %></td>
  <% end %>
<% end %>
</table>





